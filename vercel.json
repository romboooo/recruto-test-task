{
  "version": 2,
  "builds": [
    {
      "src": "server/server.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.10"
      }
    },
    {
      "src": "dist/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "server/server.py",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}